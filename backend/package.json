{
  "name": "verse-backend",
  "version": "1.0.0",
  "description": "Local backend server for Verse songwriting app",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit",
    "test": "npm run build && npm run test:unit && npm run test:integration",
    "test:unit": "node --test test/unit/*.test.cjs",
    "test:integration": "node --test test/integration/*.test.cjs"
  },
  "keywords": ["songwriting", "local", "ollama", "ai"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "@types/node": "^20.10.4",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0"
  }
}
